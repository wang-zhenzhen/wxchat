<import src="../movies/movie-list/movie-list-template.wxml"></import>
<import src="../movies/movie-grid/movie-grid.wxml"></import>
<view class="search">
  <icon type="search" size="13" color="#405f80" class="search-img"></icon>
  <input type="text" value="inputValue" placeholder="输入关键字搜索" placeholder-class="placeholder" bindchange="onBindChange" bindfocus="onBindFocus"/>
  <icon type="clear" catchtap="ontapclear(inputValue)" size="13" color="#c2c2c2" class="clear-img"></icon>
</view>
<view class="container" wx:if="{{containerShow}}">
  <view class="movies-template" >
    <template is="movieListTemplate" data="{{...inTheaters}}" />
  </view>
  <view class="movies-template">
    <template is="movieListTemplate" data="{{...comingSoon}}" />
  </view>
  <view class="movies-template">
    <template is="movieListTemplate" data="{{...top250}}" />
  </view>
</view>
<view class="search-panel" wx:if="{{searchPanelShow}}">
  <template is="movieListTemplate"/>
</view>