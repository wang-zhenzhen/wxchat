<template name="postItem">
  <view class="post-container">
      <view class="post-author-date">
        <image src="{{headerUrl}}" class="post-author"></image>
        <text class="post-date">{{date}}</text>
      </view>
      <text class="post-title">{{title}}</text>
      <image src="{{imgUrl}}" class="post-image"></image>
      <text class="post-content">{{content}}</text>
      <view class="post-like">
        <image src="/images/picture/chat.png" class="post-like-image"></image>
        <text class="post-like-font">{{chat}}</text>
        <image src="/images/picture/view.png" class="post-like-image"></image>
        <text class="post-like-font">{{font}}</text>
      </view>
    </view>
</template>