/* pages/posts/post-detail/post-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}
.head-image{
  width:750rpx;
  height: 460rpx;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top:20rpx;
}
.avatar{
  height: 64rpx;
  width:64rpx;
  vertical-align: middle;
}
.author{
  font-size:30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  /* 垂直居中 */
  vertical-align: middle;
  color:#666;
}
.const-text{
  font-size: 24rpx;
  color:#999;
  margin-left: 20rpx;
}
.title{
  margin-left: 40rpx;
  font-size:36rpx;
  font-weight: 700;
  margin-top:30rpx;
  /* 字体间距 */
  letter-spacing: 2rpx;
  color:#4b556c;
}
.date{
  font-size: 24rpx;
  color:#999;
  margin-left: 30rpx;
  vertical-align: middle;
}
.tool{
  margin-top:20rpx;
}
.circle-img{
  float:right;
  margin-left: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width:90rpx;
  height:90rpx;
}
.share-img{
  margin-left: 30rpx;
  margin-right:30rpx;
}
.horizon{
  width:660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  /* 相对位置 */
  position: relative;
  top:46rpx;
  margin: 0 auto;
  z-index: -99;
}
.detail{
  color:#666;
  margin-left: 30rpx;
  margin-top:20rpx;
  margin-right:30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
/* 音乐图 */
.audio{
  width:102rpx;
  height:110rpx;
  position: absolute;
  /* 经典水平居中 */
  left: 50%;
  margin-left: -51rpx;
  top:180rpx;
  opacity: 0.6;
}